<div class="container">
    <h2>利用者（口コミ投稿数）が多い順BEST5</h2>
    <div class="row">
      <% @ranking_4002.each do |post| %>
      <div class="card mb-2 mx-2" style="max-width: 540px;">
        <% @i += 1%>
          <h3 class="card-header">第<%= @i %>位:<%= post.product %></h3>
            <div class="row">
              <div class="col-4 m-auto">
                <img src="<%= post.image %>" preserveAspectRatio="xMidYMid slice" width="100%" height="250" class="img-thumbnail rounded">
              </div>
              <div class="col-8">
                  <table class="table table-sm">
                    <tr><td>商品名</td><td><%= post.product %></td></tr>
                    <tr><td>著者名</td><td><%= post.author %></td></tr>
                    <tr><td>総合満足度</td><td><%= post.satisfaction_all.round(1) %>/5</td></tr>
                    <tr><td>口コミ投稿数</td><td><%= post.posts_count %>人</td></tr>
　                  </table>
              </div>
              <div class="col-12 mb-2 mt-2 px-5">
                <a href=<%= "/workbooks/#{post.id}"%> role="button" class="btn btn-block btn-outline-info">商品詳細ページに進む</a>
              </div>
            </div>
          </div>
    <% end %>
  </div>
