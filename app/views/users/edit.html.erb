<aside class="col-sm-12 col-md-6 col-lg-6 m-auto">
<div class="card">
<article class="card-body">
  <h2 class="card-title text-center">プロフィール編集</h2>
  <%= form_tag("/users/#{@user.id}/update", {multipart: true}) do %>
  <form>
    <% @user.errors.full_messages.each do |message| %>
      <div class="text-danger font-weight-bold">
        <%= message %>
      </div>
    <% end %>
  <div class="form-group">
    <label for="userName">ニックネーム</label>
    <input name="name" class="form-control" id="userName" value="<%= @user.name %>">
  </div>
  <hr>
  <div class="form-group">
    <label for="userEmail">メールアドレス <span class="badge badge-danger">必須</span></label>
    <input name="email" class="form-control" id="userEmail" value="<%= @user.email %>" type="email" >
  </div>
  <hr>
  <div class="form-group">
    <label for="userImage">プロフィール画像</label>
    <input name="image" id="userImage" type="file" class="form-control-file">
  </div>
  <hr>
  <div class="form-group">
    <label for="userProfession">職業</label>
    <input name="profession" class="form-control" id="userProfession" value="<%= @user.profession %>">
  </div>
  <hr>
  <div class="form-group">
    <label class="control-label">性別</label>
    <% if @user.gender =="男性" %>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="gender" id="radio2a" value="男性" checked>
      <label class="form-check-label" for="radio2a">男性</label>
    </div>
    <div class="form-check form-check-inline">
      <input class="form-check-input" type="radio" name="gender" id="radio2b" value="女性">
      <label class="form-check-label" for="radio2b">女性</label>
    </div>
    <% elsif @user.gender=="女性" %>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="gender" id="radio2a" value="男性">
        <label class="form-check-label" for="radio2a">男性</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="gender" id="radio2b" value="女性" checked>
        <label class="form-check-label" for="radio2b">女性</label>
      </div>
    <% else %>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="gender" id="radio2a" value="男性">
        <label class="form-check-label" for="radio2a">男性</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" name="gender" id="radio2b" value="女性">
        <label class="form-check-label" for="radio2b">女性</label>
      </div>
    <% end %>
  </div>
  <hr>
  <div class="form-group">
    <label for="userStart">TOEIC学習開始日</label>
    <input type="date" name="start_date" value="<%= @user.start_date %>" id="userStart" >
  </div>
  <hr>
  <div class="form-group">
    <label for="userAge">年齢</label>
    <input type="number" name="age" id="userAge" min="0" max="100"　 value="<%= @user.age %>">
  </div>
  <hr>
  <div class="form-group">
    <label for="userProfile">プロフィール(TOEICの勉強を始めた理由や、目標など自由に記載してください)</label>
      <textarea name="profile" id="userProfile" class="form-control" placeholder = "・TOEICの勉強を始めた理由や、目標など自由に記載してください"><%= @user.profile %></textarea>
  </div>
  <hr>
  <div class="form-group">
      <button type="submit" class="btn btn-primary btn-block"> 登録ボタン</button>
  </div>
</form>
<% end %>
</article>
</div>
</aside>
