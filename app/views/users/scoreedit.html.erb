<container>
  <aside class="col-sm-12 col-md-6 col-lg-6 m-auto">
    <div class="card">
      <article class="card-body">
        <div class="row">
          <h2 class="card-title col-6 m-auto">スコア登録</h2><%= link_to("プロフィールに戻る", "/users/#{@current_user.id}",{class: "btn btn-primary col-6 m-auto"}) %>
        </div>
        <%= form_tag("/users/scoreupdate") do %>
        <form>
          <% @score.errors.full_messages.each do |message| %>
            <div class="text-danger font-weight-bold">
          <%= message %>
            </div>
          <% end %>
          <div class="mt-4">
           <p>あなたは現在<span class="text-danger lead"><%= @score_count %></span>個のスコアデータを登録しています。</p>
          </div>
          <div class="form-group m-3">
            <label for="user_month">受験日</label>
            <input type="month" name="month" class="form-control" id="user_month" min="1979-12" max="2050-12">
          </div>
          <div class="form-group m-3">
            <label for="user_points_l"><i class="fa fa-headphones" aria-hidden="true"></i>リスニングの点数</label>
            <input type="number" name="points_r" class="form-control" id="user_points_l" step="5" min="5" max="495">
          </div>
          <div class="form-group m-3">
            <label for="user_points_r"><i class="fa fa-book" aria-hidden="true"></i>リーディングの点数</label>
            <input type="number" name="points_l" id="user_points_r" class="form-control" step="5" min="5" max="495">
          </div>
    <div class="row px-5">
      <button type="submit" name="continue" class="btn btn-block btn-success">続けてスコア登録する</button>
      <button type="submit" class="btn btn-block btn-outline-dark mt-3">登録してプロフィール画面に戻る</button>
    </div>
</form>
<% end %>
</article>
</div>
</aside>
</container>
